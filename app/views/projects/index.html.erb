<h1>SIMPLE TODO LISTS</h1>
<h2>FROM RUBY GARAGE</h2>

<% @projects.each do |project|%>
<div class="project" id ="<%= "project-#{project.id}" %>">

    <div class="heading">
		<ul>
	  		<li class="icon-calendar">
	  			<%= image_tag("calendar-icon.gif") %>
	  		</li>
	  		<li class="project-title"><h1><%= project.title %></h1></li>
	  		<li class="icon-edit">
				<%= link_to image_tag("edit-large.png"), edit_project_path(project) %>
	  		</li>
	  		<li class="icon-delete">
	  			<%= link_to image_tag("trash-large.png"), project, method: :delete, data: { confirm: "Are you sure you want to delete this project and all associated tasks?" } %>
	  		</li>
		</ul>
    </div>

	<%= form_for [project, project.tasks.build] do |f| %>
		<div class="input-group">
	  	<span class="input-group-addon glyphicon glyphicon-plus"></span>
	<%= f.text_field :name, class: "form-control", required: true %>
		  	<span class="input-group-btn">
	<%= f.button "Add Task", class: "btn btn-success", :type => "submit" %>
	  	</span>
		</div>
	<% end %>

    <% if project.tasks.any? %>
    	<div class="list-wrapper">
			<ul class="list-group">
				<% project.tasks.each do |task| %>
					<% if !task.new_record? %>
				  		<li class="list-group-item">
				    		<input type="checkbox" id="<%= task.id %>" <%= if task.status == "Done" then "checked" end %>/>
				    		<label for="<%= task.id %>">
				      			<%= task.name %>
				    		</label>
				    		<div class="list-item-buttons">
				      			<div class="list-item-icon move">
					      			<%= link_to image_tag("up-down.png"), up_path(task), method: "patch" %>
				      			</div>
				      			<div class="list-item-icon move"><%= link_to image_tag("up-down.png"), down_path(task), method: "patch" %></div>
				      			<div class="list-item-icon edit"><%= link_to image_tag("edit-small.png"), edit_task_path(task)%></div>
				      			<div class="list-item-icon trash"><%= link_to image_tag("trash-small.png"), task, method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></div>
				    		</div>
				  		</li>
			  		<% end %>
			  	<% end %>
			</ul>
    	</div>
	<% end %>
</div>
<% end %>

<a href="<%= new_project_path %>">
	<button type="button" class="btn btn-primary" id="add-todo-list">
		<span class="glyphicon glyphicon-plus"></span>
		Add TODO List
	</button>
</a>
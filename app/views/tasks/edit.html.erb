<h1>Edit Task</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@task) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
      <br/>
      <%= f.label :status %>
      <%= f.text_field :status, required: true, :pattern => 'New|Done' %>
      <br/>
      <%= f.label :deadline %>
      <%= f.text_field :deadline %>      
      <br />
      <%= f.submit "Save changes to task ", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>